{
	"name": "dos2-savegame-tools",
	"version": "1.0.0",
	"description": "LSV unpacking and LSF/LSB to LSX conversion for Divinity Original Sin 2 savegames",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "tsc",
		"postinstall": "patch-package && npm rebuild lz4",
		"unpack": "node dist/cli.js unpack",
		"convert": "node dist/cli.js convert",
		"start": "node dist/cli.js",
		"dev": "node dist/server.js",
		"pretty": "npx prettier --write '**/*.{js,ts,json,xml,html,css,scss,md,yaml,yml}'",
		"verify": "node dist/scripts/verify-roundtrip.js",
		"verify:quick": "node dist/scripts/verify-roundtrip.js --quick",
		"verify:lsf2lsx": "node dist/scripts/verify-roundtrip.js --lsf2lsx",
		"verify:unpack": "node dist/scripts/verify-roundtrip.js --unpack"
	},
	"keywords": [
		"dos2",
		"bg3",
		"divinity",
		"savegame",
		"lsv",
		"lsf",
		"lsb",
		"lsx",
		"lslib",
		"larian",
		"larian-studios",
		"divinity-original-sin-2",
		"baldurs-gate-3"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"fast-xml-parser": "^5.3.5",
		"fzstd": "^0.1.1",
		"lz4": "^0.6.5",
		"zstd-napi": "^0.0.12"
	},
	"devDependencies": {
		"@prettier/plugin-xml": "^3.4.2",
		"patch-package": "^8.0.1",
		"prettier": "^3.8.1",
		"prettier-plugin-sh": "^0.18.0",
		"typescript": "^5.9.3"
	}
}
